<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:timePickerStyle">@style/MyThemeTimePicker</item>
    </style>

    <style name="MyThemeTimePicker" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:textColorPrimary">@color/colorSelected</item>
        <item name="android:textColorSecondary">@color/switch_disable</item>
        <item name="android:textColor">@color/colorSelected</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="DayButtonInclude">
        <item name="android:textColor">@color/colorSelected</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/day_button_background_include</item>
    </style>

    <style name="DayButtonNonInclude">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/day_button_background_non_include</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorSelected</item> <!-- Whatever color you want-->
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorSelected</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorSelected</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="textAllCaps">true</item>
    </style>

    
</resources>
